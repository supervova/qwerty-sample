{
  "name": "_project",
  "version": "1.0.0",
  "description": "The social network on Qwerty Networks engine",
  "scripts": {
    "b": "gulp --p"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=3"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "ignoreFiles": [
      "**/*.css",
      "**/*.html",
      "node_modules/**/*"
    ],
    "rules": {
      "comment-whitespace-inside": "always",
      "font-family-name-quotes": "always-where-recommended",
      "function-parentheses-space-inside": "never-single-line",
      "max-nesting-depth": 3,
      "media-feature-colon-space-after": "always",
      "media-feature-colon-space-before": "never",
      "media-feature-range-operator-space-after": "always",
      "media-feature-range-operator-space-before": "always",
      "no-duplicate-selectors": true,
      "number-leading-zero": "never",
      "order/order": [
        "custom-properties",
        "dollar-variables",
        {
          "type": "at-rule",
          "name": "include"
        },
        "declarations",
        "rules",
        {
          "type": "at-rule",
          "name": "include",
          "hasBlock": true
        }
      ],
      "order/properties-alphabetical-order": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "appearance"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "inside-block"
          ]
        }
      ],
      "scss/at-extend-no-missing-placeholder": null,
      "scss/dollar-variable-colon-space-after": null,
      "selector-attribute-quotes": "always",
      "selector-class-pattern": "[a-zA-Z0-9]+[a-za-zA-Z0-9-_]*"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "wp": true
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jquery": true
    },
    "plugins": [
      "eslint-plugin-prettier",
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "settings": {
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "max-len": [
        "error",
        {
          "ignoreComments": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "BinaryExpression": true,
            "VariableDeclarator": true
          }
        }
      ],
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "printWidth": 40000,
          "bracketSameLine": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@popperjs/core": "^2.10.2",
    "browser-sync": "^2.27.5",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-changed": "^4.0.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-prettier": "^4.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-twig": "^1.2.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.0",
    "postcss-uncss": "^0.17.0",
    "sass": "^1.43.2",
    "webpack-stream": "^7.0.0",
    "yargs": "^17.2.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  }
}
